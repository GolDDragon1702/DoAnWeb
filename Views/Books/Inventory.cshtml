<style>
    body {
        font-family: 'Arial', sans-serif;
        background-image: url('Bookstore.jpg');
        background-size: cover; /* Đảm bảo ảnh nền kích thước phủ hết màn hình */
        background-position: center; /* Đặt ảnh nền ở giữa màn hình */
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .my-form {
        max-width: 400px;
        width: 100%;
        background-color: rgba(255, 255, 255, 0.9); /* Độ trong suốt của form */
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    label {
        font-size: 16px;
        color: #333;
        display: block;
        margin-bottom: 8px;
    }

    input {
        width: 100%;
        padding: 12px;
        margin-bottom: 16px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
    }

    button {
        background-color: #007bff;
        color: #fff;
        padding: 14px 18px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>


<form method="post" asp-action="Inventory" class="my-form">
    <label for="Thang">Tháng:</label>
    <input type="text" name="Thang" id="Thang" />
    <button type="submit">Gửi</button>
</form>