@model IEnumerable<QLNS1.Models.Sach>

@{
    ViewData["Title"] = "Index";
}

<style>
    h1 {
        color: #3498db;
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        text-align: center;
        color: #555;
    }

    a {
        color: #3498db;
        text-decoration: none;
        margin-right: 10px;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #e74c3c;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    th, td {
        border: 1px solid #ecf0f1;
        text-align: left;
        padding: 12px;
    }

    th {
        background-color: #3498db;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #ecf0f1;
    }

    tr:hover {
        background-color: #bdc3c7;
    }

    .action-links {
        display: flex;
        justify-content: center;
    }

    .action-links a {
        margin: 0 10px;
        padding: 8px 16px;
        border: 1px solid #3498db;
        border-radius: 4px;
        color: #3498db;
        background-color: #fff;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .action-links a:hover {
        background-color: #3498db;
        color: #fff;
    }
</style>

<h1>Thông tin chi tiết sách</h1>

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Author)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.Picture)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Author)</td>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Picture)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.SachId">Chỉnh sửa</a>
                    <a asp-action="Details" asp-route-id="@item.SachId">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.SachId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
