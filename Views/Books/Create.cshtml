@model QLNS1.Models.Sach

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #007bff;
        text-align: center;
    }

    .btn-primary {
        width: 80px !important;
        display: block;
        margin: 0 auto;
        font-size: 14px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        border-radius: 5px;
    }

    .table {
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle !important;
    }

    .table thead {
        background-color: #343a40;
        color: #ffffff;
    }

    .table tbody tr:nth-child(odd) {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #dae0e5;
    }

    .btn-warning, .btn-info, .btn-danger {
        margin-right: 5px;
    }
</style>

<div class="row">
    <form asp-action="Create">
        <table class="table table-striped table-bordered">
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên sách:</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="Author" class="control-label">Tác giả:</label>
                        <input asp-for="Author" class="form-control" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label">Thể loại:</label>
                        <input asp-for="Type" class="form-control" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label">Số lượng:</label>
                        <input asp-for="Amount" class="form-control" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Giá:</label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="Picture" class="control-label">Hình ảnh:</label>
                        <input asp-for="Picture" class="form-control" />
                    </div>
                </td>
            </tr>
        </table>
        <hr />
        <div class="form-group">
            <input type="submit" value="Tạo mới" class="btn btn-primary mb-3" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Danh sách chi tiết</a>
</div>
