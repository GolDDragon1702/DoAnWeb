@model List<Sach>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLNS1.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container-fluid {
            padding: px 0;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .book-card {
            width: 18rem;
            margin: 0.5rem;
        }

        .card1 {
            border: 1px solid #dee2e6;
            border-radius: 5px;
            transition: box-shadow 0.3s ease;
            overflow: hidden;
        }

        .image-container {
            overflow: hidden;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            height: 300px;
        }

        .image1 {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .card1:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .image1:hover {
            transform: scale(1.1);
            border: 2px solid #dc3545;
        }

        .info {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        .list-group-item {
            border: none;
            padding: 5px 0;
        }

            .list-group-item:hover {
                background-color: #f8f9fa;
            }

            .list-group-item:last-child {
                border-bottom-left-radius: 5px;
                border-bottom-right-radius: 5px;
            }

        .container {
            max-width: none;
            padding: 0;
        }

        .navbar {
            background-color: #007bff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            color: white;
            font-weight: bold;
            font-size: 24px;
        }

            .navbar-brand:hover {
                color: #fff;
            }

        .section-title {
            text-align: center;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #007bff;
        }
    </style>
    <title>Library Management</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Thư Viện Sách</a>
        </div>
    </nav>

    <section>
        <div class="container-fluid">
            <div class="section-title">Danh Sách Sách</div>
            <div class="card-container">
                @foreach (var o in Model)
                {
                    <div class="book-card">
                        <div class="card1">
                            <div class="image-container">
                                <img src="@o.Picture" class="card-img-top image1" alt="@o.Name" />
                            </div>
                            <div class="info">
                                <ul class="list-group list-group-flush text-start">
                                    <li class="list-group-item">Tên sách: @o.Name</li>
                                    <li class="list-group-item">Thể loại: @o.Type</li>
                                    <li class="list-group-item">Tác giả: @o.Author</li>
                                    <li class="list-group-item">Số lượng: @o.Amount</li>
                                    <li class="list-group-item">Giá: @o.Price</li>
                                </ul>
                                <a asp-controller="Books" asp-action="Details"></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Bootstrap JS and Popper.js -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

</html>
